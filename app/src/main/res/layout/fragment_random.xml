<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    tools:context="mplink.mptech.randompicker.RandomFragment">

    <android.support.v7.widget.Toolbar
        android:id="@+id/randToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/txtPickName"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="25dp"
        android:layout_marginTop="25dp"
        android:layout_weight="2"
        android:gravity="center"
        android:textAlignment="center"
        android:textSize="30sp" />

    <Button
        android:id="@+id/btnRandom"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="20dp"
        android:layout_weight="3"
        android:background="@android:color/holo_green_light"
        android:text="@string/start_random"
        android:textSize="30sp" />

    <Button
        android:id="@+id/btnAgain"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="15dp"
        android:layout_weight="3"
        android:background="@android:color/holo_orange_dark"
        android:text="@string/speak_again"
        android:textSize="30sp" />

    <Button
        android:id="@+id/btnReset"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="15dp"
        android:layout_weight="1"
        android:background="#cb2b20"
        android:text="@string/reset_list"
        android:textSize="20sp" />

</LinearLayout>
